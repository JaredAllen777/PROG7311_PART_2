@model List<Farmer>

<h2>Farmer List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.Location</td> <!-- ✅ You were missing this! -->
                <td>
                    <a asp-action="Edit" asp-controller="Farmer" asp-route-id="@farmer.Id" class="btn btn-warning">Edit</a>

                    <form asp-action="Delete" asp-controller="Farmer" asp-route-id="@farmer.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this farmer?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h3>Add New Farmer</h3>
<form method="post" asp-action="AddFarmer" asp-controller="Farmer">
    <div class="form-group">
        <input type="text" name="Name" class="form-control" placeholder="Farmer Name" required />
    </div>
    <div class="form-group">
        <input type="text" name="Location" class="form-control" placeholder="Location" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Farmer</button>
</form>
